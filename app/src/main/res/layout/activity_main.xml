<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Toolbar -->
    <TextView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue"
        android:text="Mobile Programming

                      Pertemuan #3"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Gambar -->
    <ImageView
        android:id="@+id/ivMainImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/profile"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ari Awaludin"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/ivMainImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- EditText Link -->
    <EditText
        android:id="@+id/editTextLink"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan link di sini"
        android:inputType="textUri"
        app:layout_constraintTop_toBottomOf="@id/ivMainImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Button Website -->
    <Button
        android:id="@+id/btnOpenWebsite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OPEN WEBSITE"
        android:backgroundTint="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/editTextLink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- EditText Lokasi -->
    <EditText
        android:id="@+id/editTextLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan lokasi di sini"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/btnOpenWebsite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Button Lokasi -->
    <Button
        android:id="@+id/btnOpenLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OPEN LOCATION"
        android:backgroundTint="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/editTextLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- EditText Share -->
    <EditText
        android:id="@+id/editTextShare"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan teks di sini"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/btnOpenLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Button Share -->
    <Button
        android:id="@+id/btnShareText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SHARE THIS TEXT"
        android:backgroundTint="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/editTextShare"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Button Alert -->
    <Button
        android:id="@+id/btnAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tampilkan Alert"
        android:backgroundTint="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/btnShareText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Button Toast -->
    <Button
        android:id="@+id/btnToast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tampilkan Toast"
        android:backgroundTint="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/btnShareText"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
