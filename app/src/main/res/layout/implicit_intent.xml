<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/tvNavbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#6200EE"
        android:text="Mobile Programming"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:gravity="start"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/tvMainContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tugas Pertemuan #3"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="55dp"/>

    <TextView
        android:id="@+id/tvname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ari Awaludin"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="285dp"/>

    <ImageView
        android:id="@+id/ivMainImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/profile"
        app:layout_constraintTop_toBottomOf="@id/tvMainContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:hint="Masukkan link di sini"
        android:translationY="330dp"
        android:maxLength="50"
        android:inputType="text"/>

    <Button
        android:id="@+id/btnOpenWebsite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OPEN WEBSITE"
        app:layout_constraintTop_toBottomOf="@id/ivMainImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:hint="Masukkan teks di sini"
        android:translationY="450dp"
        android:maxLength="50"
        android:inputType="text" />

    <Button
        android:id="@+id/btnOpenLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OPEN LOCATION"
        app:layout_constraintTop_toBottomOf="@id/btnOpenWebsite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="65dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:hint="Masukkan teks di sini"
        android:translationY="562dp"
        android:maxLength="50"
        android:inputType="text" />


    <Button
        android:id="@+id/btnShareText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHARE THIS TEXT"
        app:layout_constraintTop_toBottomOf="@id/btnOpenLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
